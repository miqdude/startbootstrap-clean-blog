<%- include('partials/header'); -%>
<%- include('partials/nav'); -%>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" placeholder="Blog title">
        </div>
        <div class="form-group">
          <label for="slug">Slug</label>
          <input type="text" class="form-control" id="slug" aria-describedby="slugdesc" placeholder="Blog Slug">
          <small id="slugdesc" class="form-text text-muted">Write blog slug, just alphabets numbers and dash</small>
        </div>
        <div class="form-group">
          <label for="post-body">Body</label>
          <small id="post-body-desc" class="form-text text-muted">Write your blog content below</small>
          <div id="post-body"></div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill('#post-body', {
    theme: 'snow'
  });
</script>

<%- include('partials/footer') -%>